# Environment Configuration Template

# Docker Hub Configuration
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password
DOCKER_EMAIL=your-email@example.com

# Application Configuration
APP_NAME=S_MART Billing System
APP_VERSION=1.0.0
ENVIRONMENT=production

# Kubernetes Configuration
KUBERNETES_CLUSTER=your-cluster-name
KUBERNETES_NAMESPACE=smart-billing
KUBERNETES_CONTEXT=your-context

# Database Configuration
DB_NAME=s_mart
DB_TYPE=SQLite
DB_PATH=/data/s_mart.db
DB_TIMEOUT=30

# Jenkins Configuration
JENKINS_URL=http://jenkins-server:8080
JENKINS_USER=jenkins-admin
JENKINS_TOKEN=your-jenkins-token

# Git Configuration
GIT_REPO=https://github.com/your-username/smart-billing.git
GIT_BRANCH=main
GIT_WEBHOOK=true

# Image Tag (automatically set by CI/CD)
IMAGE_TAG=latest

# Replica Configuration
REPLICAS=2

# Resource Limits
MEMORY_REQUEST=256Mi
MEMORY_LIMIT=512Mi
CPU_REQUEST=250m
CPU_LIMIT=500m

# Port Configuration
GUI_PORT=5900
METRICS_PORT=8000
NODEPORT_GUI=30900
NODEPORT_METRICS=30800

# Storage Configuration
STORAGE_SIZE=1Gi
STORAGE_CLASS=standard

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_LOGGING=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Backup Configuration
ENABLE_BACKUP=true
BACKUP_INTERVAL=daily
