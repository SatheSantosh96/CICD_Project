# Docker Build Arguments
ARG PYTHON_VERSION=3.11
ARG BASE_IMAGE=python:3.11-slim

# Docker Environment Variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PIP_NO_CACHE_DIR=1
ENV DB_PATH=/data/s_mart.db
ENV ENVIRONMENT=production

# Kubernetes Configuration
NAMESPACE=smart-billing
REPLICAS=2
RESOURCE_REQUEST_MEMORY=256Mi
RESOURCE_LIMIT_MEMORY=512Mi
RESOURCE_REQUEST_CPU=250m
RESOURCE_LIMIT_CPU=500m

# Port Mappings
CONTAINER_PORT=5900
SERVICE_PORT=5900
NODEPORT=30900
METRICS_PORT=8000

# Storage
STORAGE_SIZE=1Gi
STORAGE_CLASS=standard
MOUNT_PATH=/data

# Image Configuration
REGISTRY=docker.io
REGISTRY_USER=<SET_YOUR_DOCKER_USERNAME>
IMAGE_NAME=smart-billing-system
IMAGE_TAG=latest

# Jenkins Configuration
DOCKER_CREDENTIALS_ID=docker-credentials
BUILD_NUMBER=1

# Application Configuration
APP_NAME=S_MART Billing System
APP_VERSION=1.0.0
ENABLE_LOGGING=true
ENABLE_METRICS=true
ENABLE_BACKUP=true

# Security
RUN_AS_USER=1000
RUN_AS_GROUP=1000
READ_ONLY_ROOT_FILESYSTEM=false
ALLOW_PRIVILEGE_ESCALATION=false
